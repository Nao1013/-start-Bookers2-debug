<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100, 100) %></td>
        <td><%= user.name %></td>
        <td>
          <%= render "relationships/btn", user: user %>
      	    <%# if current_user != user && current_user.followers?(user) && user.follower?(current_user) %>
      	      <%#= link_to 'chatを始める', chat_path(user.id), cass: "ml-3" %>
      	    <% #end %>
        </td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
